<table>
  <% book.book_comments.each do |comment| %>
	  <tr>
      <td>
        <%= link_to(comment.user) do %>
          <%= image_tag comment.user.get_profile_image, size:"100x100" %><br>
          <%= comment.user.name %>
        <% end %>
      </td>
      <td>
        <%= comment.comment %></td>
        <% if comment.user.id == current_user.id %>
          <td><%= link_to 'Destroy', book_book_comment_path(comment.book_id, comment),
          method: :delete, remote: true, class: "btn btn-sm btn-danger"%></td>
        <% end %>
    </tr>
  <% end %>
</table>
